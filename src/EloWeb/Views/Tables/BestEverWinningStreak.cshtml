@model System.Collections.Generic.IEnumerable<EloWeb.Models.Player>

@{
    ViewBag.Title = "Best Ever Winning Streak Leaderboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Best Ever Winning Streak Leaderboard</h2>

<h4>
@Html.ActionLink("Add Game", "Create", "Games") | @Html.ActionLink("Add Player", "Create", "Players")
</h4>

<table class="table">
    <tr>
        <th>
            Rank
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongestWinningStreak)
        </th>
    </tr>

@{ var rank = 1; }
@foreach (var item in Model) {
    <tr>
        <td>
            @rank
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", "Players", new { name = item.Name }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LongestWinningStreak)
        </td>
    </tr>
    rank++;
}
</table>
